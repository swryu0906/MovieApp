<div class="main movie-show">
  <div class="container">
    
    <!-- Display the movie's info here -->
    <div class="movie">
      <!-- movie image -->
      <img src="<%= @movie.image %>" alt="<%= @movie.title %> cover image">

      <div class="info">
        <h3 class="movie-title"><%= @movie.title %></h3>
        <p class="movie-release-year"><%= @movie.release_year %></p>
        <p class="movie-plot"><%= @movie.plot %></p>
      </div>
    </div>

    <h2>Cast</h2>
    <!-- Display each actor's info here -->
    <% @actors.each do |actor| %>
    <div class="actor">
      <!-- actor image -->
      <img src="<%= actor.image %>" alt="<%= actor.first_name %> <%=actor.last_name %> image">
      <h3 class="actor-name"><%= actor.first_name %> <%= actor.last_name %></h3>
      <p class="actor-bio"><%= actor.bio %></p>
      <p><%= link_to "Learn more", actor_path(actor) %></p>
    </div>
    <% end %>
  </div>
</div>