<div class="main actor-index">
  <div class="container">
    <div class="row">

      <!--
      To do: Loop through movies and display each one with this HTML
  		-->
     <% @actors.each do |actor| %>
      <div class="actor col-xs-2">
        <!-- actor image goes here -->
        <img src="<%= actor.image %>" alt="<%= actor.first_name %> <% actor.last_name %> image">
        <!-- actor name goes here -->
        <h3><%= actor.first_name %> <%= actor.last_name %></h3>
        <!-- actor bio goes here -->
        <p><%= actor.bio %></p>
        <p><%= link_to "Learn more", actor_path(actor) %></p>
      </div>
      <% end %>
  </div>
</div>